<html>
<head>
	<title>Show your Bones</title>
	<link rel="stylesheet" type="text/css" href="/css/users/show.css">
</head>
<body>

<h1>Users show </h1>
	
	<p id="user_id" style="display: none"><%= user.id %></p>

	<div id="container">
		<div id="header">
			<h1 id="title">Your movies</h1>
		</div>
		<main>
			<div id="map-canvas"></div>
			<div id="control-panel">
					<a href="/villains"><p>All Villains</p></a>
									<p id="users-title"> Welcome <%= user.username %>''</p>

					<% if(usertrue)  { %>
						<p>Add another Villain!</p>
						<form action="/users/<%=user.id %>" method="POST">
							<input type="text" name="name" placeholder="Name">
							<input type="text" name="from" placeholder="What story is he from?">
							<input type="text" name="accomplishments" placeholder="High lights">
							<input type="text" name="image" placeholder="Add an image!">
							<input type="text" name="about" placeholder="Tell us more">

							<input type="submit">				
						</form>
					<% } %>


					<% if(usertrue) { %> 
						<form action="/users/<%= user.id %>?_method=DELETE" method="POST">
							
							<button id="delete-button">Remove user</button>
						</form>
					<% } %>
			</div>
		</main>
	</div>



<% include ../partials/footer %>
